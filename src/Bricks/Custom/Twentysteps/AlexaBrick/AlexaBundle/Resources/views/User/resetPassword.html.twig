{% extends "BricksCustomTwentystepsAlexaBundle:layout:layout.html.twig" %}

{% block content %}

    <div id="logo-container-top"></div>

    <div class="container">
        <div class="row">
            <div class="Absolute-Center is-Responsive">
                <div class="col-sm-12 col-md-10 col-md-offset-1 Absolute-Content">
                    <form action="{{ path('bricks.custom.twentysteps_alexa.user.reset_password') }}" method="post">
                        <label style="margin-bottom: 15px; width: 100%">Passwort zurücksezten <span class="glyphicon glyphicon-info-sign icon-info pull-right" aria-hidden="true" data-toggle="popover" data-placement="left" title="Passswort&nbsp;zurücksetzen" data-content="Gibt Deine bei der Registrierung verwendete E-Mail Adresse ein, um Dein Passwort zurückzusetzen."></span></label>
                        {% if (message is defined) %}
                            <div style="margin-bottom: 10px">{{ message|trans({},'core') }}</div>
                        {% endif %}
                        <div class="form-group">
                            <label for="username">E-Mail Adressse</label>
                            <input type="text" class="form-control" id="username" name="_username" placeholder="E-Mail Adresse">
                        </div>
                        <button type="submit" class="btn btn-primary">{{ 'Reset'|trans({},'core') }}</button>
                        <a style="text-align: right; float: right; margin-top: 8px;" href="{{ path('bricks.custom.twentysteps_alexa.user.login') }}">{{ 'Login'|trans({},'core') }}</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}